generator client {
  provider = "prisma-client-js"
  output   = "../lib/generated/prisma"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model Seller {
  id               String    @id @default(cuid())
  email            String    @unique
  password         String
  companyName      String
  contactName      String
  phone            String
  paypalMe         String?
  stripeCustomerId String?
  createdAt        DateTime  @default(now())
  products         Product[]
}

model Buyer {
  id        String   @id @default(cuid())
  email     String   @unique
  password  String
  name      String
  createdAt DateTime @default(now())
}

model Product {
  id          String   @id @default(cuid())
  sellerId    String
  title       String
  description String
  price       Float
  photos      String   @default("[]")
  category    String?
  active      Boolean  @default(false)
  stripeSubId String?
  views       Int      @default(0)
  createdAt   DateTime @default(now())
  seller      Seller   @relation(fields: [sellerId], references: [id])
}
model Favourite {
  id        String   @id @default(cuid())
  buyerEmail String
  productId String
  createdAt DateTime @default(now())

  @@unique([buyerEmail, productId])
}

  model Report {
  id        String   @id @default(cuid())
  productId String
  reason    String
  createdAt DateTime @default(now())
}
